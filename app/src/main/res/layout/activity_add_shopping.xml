<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <TextView
        android:layout_marginTop="16dp"
        android:textStyle="italic"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_request_text"/>

    <EditText
        android:id="@+id/shops_edit_text"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="16dp"
        android:textStyle="italic"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alternative_add"/>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageButton
            android:id="@+id/add_photo_button"
            android:src="@drawable/ic_add_a_photo_72dp"
            android:layout_width="@dimen/photo_size"
            android:layout_height="@dimen/photo_size"/>

        <ImageButton
            android:id="@+id/add_photo_from_directory"
            android:src="@drawable/ic_folder_black_24dp"
            android:layout_width="@dimen/photo_size"
            android:layout_height="@dimen/photo_size"/>

        <ImageView
            android:id="@+id/user_photo"
            android:layout_marginStart="32dp"
            android:layout_width="@dimen/photo_size"
            android:layout_height="@dimen/photo_size"/>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/adding_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_input_add" />

</LinearLayout>